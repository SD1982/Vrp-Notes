{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

    <div class="pages-header">
        <h1>Bienvenue
            {{ user.name }}</h1>
    </div>

    <div class="listings-container">
        <div class="listings">
            <div class="listings-menu">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a class="nav-link active" data-toggle="tab" href="#notes">Notes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" data-toggle="tab" href="#messages">Messages</a>
                    </li>
                </ul>
            </div>

            <div id="myTabContent" class="tab-content">

                <div class="tab-pane fade show active" id="notes">
                    <div class="notes-listing">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Date</th>
                                    <th scope="col">Montant</th>
                                    <th scope="col">Type</th>
                                    <th scope="col">Statut</th>
                                    <th scope="col">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for note in notes %}
                                    {% if note.statut == 'Validée' %}
                                        <tr class="table-success">
                                        {% else %}
                                            <tr class="table-warning">
                                            {% endif %}
                                            <td>{{ note.date | date('d/m/y')}}</td>
                                            <td>{{ note.montant }}
                                                €</td>
                                            <td>{{ note.type }}</td>
                                            <td>{{ note.statut }}</td>
                                            <td>
                                                <a href="{{ path('user_note_show', {'id': note.id}) }}" class="btn btn-primary">Consulter</a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                            <div class="navigation">
                                {{ knp_pagination_render(notes) }}
                            </div>
                        </div>
                    </div>

                    <div class="tab-pane fade" id="messages">
                        <div class="messages-en-attente-listing">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">1</th>
                                        <th scope="col">2</th>
                                        <th scope="col">3</th>
                                        <th scope="col">4</th>
                                    </tr>
                                </thead>

                                <tbody></tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>
        </div>

    {% endblock %}